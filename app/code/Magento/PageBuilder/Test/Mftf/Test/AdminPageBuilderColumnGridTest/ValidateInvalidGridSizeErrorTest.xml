<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="ValidateInvalidGridSizeErrorTest">
        <annotations>
            <features value="PageBuilder"/>
            <stories value="Column"/>
            <title value="Grid Size: Cant set grid size above to invalid number"/>
            <description value="Checks if setting the grid size to negative prompts an error"/>
            <severity value="AVERAGE"/>
            <useCaseId value="MC-950"/>
            <testCaseId value="MC-2302"/>
            <group value="pagebuilder"/>
            <group value="pagebuilder-column"/>
            <group value="pagebuilder-columnGridSize"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="navigateToAPageWithPageBuilder" stepKey="navigateToAPageWithPageBuilder"/>
            <actionGroup ref="switchToPageBuilderStage" stepKey="switchToPageBuilderStage"/>
        </before>
        <after>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logOut"/>
        </after>
        <actionGroup ref="dragContentTypeToStage" stepKey="dragColumnIntoStage">
            <argument name="contentType" value="PageBuilderColumnContentType"/>
        </actionGroup>
        <actionGroup ref="openPageBuilderEditPanel" stepKey="openGridSizeForm">
            <argument name="contentType" value="PageBuilderColumnsContentType"/>
        </actionGroup>
        <actionGroup ref="fillSlideOutPanelFieldGeneral" stepKey="enterNegativeGridSize">
            <argument name="property" value="PageBuilderColumnsGridSizeProperty_Minus50"/>
        </actionGroup>
        <actionGroup ref="saveEditPanelAndValidateFieldErrorGeneralSection" stepKey="validateNegativeGridSize">
            <argument name="property" value="PageBuilderColumnsGridSizeProperty_Minus50"/>
        </actionGroup>
        <actionGroup ref="fillSlideOutPanelFieldGeneral" stepKey="enterGridSize1">
            <argument name="property" value="PageBuilderColumnsGridSizeProperty_1"/>
        </actionGroup>
        <actionGroup ref="saveEditPanelAndValidateFieldErrorGeneralSection" stepKey="validateGridSize1">
            <argument name="property" value="PageBuilderColumnsGridSizeProperty_1"/>
        </actionGroup>
        <actionGroup ref="fillSlideOutPanelFieldGeneral" stepKey="enterGridSize0">
            <argument name="property" value="PageBuilderColumnsGridSizeProperty_0"/>
        </actionGroup>
        <actionGroup ref="saveEditPanelAndValidateFieldErrorGeneralSection" stepKey="validateGridSize0">
            <argument name="property" value="PageBuilderColumnsGridSizeProperty_0"/>
        </actionGroup>
        <!-- Check validation occurs when entering as text -->
        <comment userInput="Check validation occurs when entering as text" stepKey="commentValidateStringInput"/>
        <comment userInput="Remove input type changing" stepKey="changeInputToText"/>
        <actionGroup ref="fillSlideOutPanelFieldGeneral" stepKey="enterInvalidGridSizeString">
            <argument name="property" value="PageBuilderColumnsGridSizeProperty_Text"/>
        </actionGroup>
        <actionGroup ref="saveEditPanelAndValidateFieldErrorGeneralSection" stepKey="validateGridSizeString">
            <argument name="property" value="PageBuilderColumnsGridSizeProperty_Text"/>
        </actionGroup>
    </test>
</tests>
